<%= render "shared/header" %>
<div class="container">
  <h2>新規所属作成</h2><br>

  <%= form_with model: @department, url: "/departments", method: :post, local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
  <div class = name >
          <%= f.label :新規所属名称 %>
  <div class="form-group">
      <%= f.text_field :department ,class: "custom-text-field",placeholder: "部、もしくは営業所"%><br>
  </div>
    </div>

<%= f.submit "所属作成" ,class: "submit_button" %>
</div>

<% end %>
