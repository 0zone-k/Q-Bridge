<%= render "shared/header" %>
<div class="container">
  <h2>新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class = name >
          <%= f.label :名前（全角） %>
  <div class="form-group">

      <%= f.text_field :last_name ,placeholder: "例) 山田"%>
  </div>
    </div>
    <div class = name >
  <div class="form-group">
      <%= f.text_field :first_name ,placeholder: "例) 陸太郎"%>
  </div>
  </div>

        <%= f.label :名前カナ（全角） %>
<div class = name-kana >
  <div class="form-group">
  
      <%= f.text_field :last_name_kana ,placeholder: "例) ヤマダ"%>
  </div>
    </div>
  <div class = name-kana >
  <div class="form-group">
      <%= f.text_field :first_name_kana ,placeholder: "例) リクタロウ"%>
  </div>
  </div>
    <div class="form-group">
      <%= f.label :職員番号 %>
      <%= f.text_field :employee_num ,placeholder: "職員番号を入力"%>
  </div>
    <div class="form-group">
      <%= f.label :所属 %>
  <%= f.collection_select :department_id, Department.all, :id ,:department,{}, {class:"department-select"} %>
    </div>

  <div class="form-group">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: "メールアドレスを入力"%>
  </div>
  <div class="form-group">
      <%= f.label :内線番号 %>
      <%= f.text_field :inner_line ,placeholder: "内線番号を入力"%>
  </div>
  <div class="form-group">
    <label class="form-text">パスワード</label>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>
  <div class="form-group">
      <label class="form-text">パスワード(確認)</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"同じパスワードを入力して下さい" %>
  </div>


<%= f.submit "会員登録" ,class: "submit_button" %>
</div>

<% end %>
