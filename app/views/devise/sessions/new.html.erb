<%= render "shared/header" %>
<div class="container">
  <h2>ユーザーログイン</h2>
  <%= form_with model:@user, url: new_user_session_path, local: true do |f| %>
<div class="form-group">
<div class="form">
<%= f.label :email, "メールアドレス" %>
<%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力" %>
</div>
</div>

<div class="form-group">
<div class="form">
<%= f.label :password, "パスワード" %>
<%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワードを入力" %>
</div>
</div>

<% if devise_mapping.rememberable? %>
<div class="field">
<%= f.check_box :remember_me, class: 'inline-element' %>
<%= f.label :remember_me, "ログインを維持する", class: 'inline-element' %>
</div>
<% end %>

<%= f.submit "ログイン", class: "submit_button" %>
<% end %>
</body>
</html>